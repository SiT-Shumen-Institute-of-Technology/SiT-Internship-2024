@model SACS.Web.ViewModels.Administration.Dashboard.IndexViewModel

@{
    ViewData["Title"] = "Home Page";
    var users = Model.Users;
}

<div class="text-center">
    <h1 class="display-4">Team Attendance</h1>
</div>

<!-- Excel-like grid layout -->
<div class="container mt-5">
    <div class="row g-0">
        <div class="col-12">
            <div class="d-grid" style="grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); gap: 1px; background-color: #dee2e6;">
                @for (int i = 0; i < users.Count; i++)
                {
                    var backgroundColor = (i / 4 + i % 4) % 2 == 0 ? "#f8f9fa" : "#e9ecef"; // chessboard-like pattern

                        <div class="p-3 text-center border" style="background-color:@backgroundColor;">
                            <strong>@users[i].UserName</strong>
                        </div>
                }
            </div>
        </div>
    </div>
</div>
</div>
