@using SACS.Data.Models
@model CreateEmployeeAndSummaryViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	var departmentInput = Model.Departments.Select(x => new SelectListItem(x.Name, x.Id));
	Status[] statusList = { Status.Active, Status.Remote, Status.Vacation, Status.Absent, Status.Late };
	var statusInput = statusList.Select(s => new SelectListItem(s.ToString(), Array.IndexOf(statusList, s).ToString()));
}
<div class="text-center">
	<h1 class="display-4">Add an employee</h1>
</div>
<hr>

<form asp-controller="AddEmployee" asp-action="Create" method="post" class="col-md-6 offset-md-3">
	<div>
		<h2>Employee Info:</h2>

		<div class="form-group">
			<label asp-for="FirstName"></label>
			<input class="form-control" asp-for="FirstName">
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="LastName"></label>
			<input class="form-control" asp-for="LastName">
			<span asp-validation-for="LastName" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Position"></label>
			<input class="form-control" asp-for="Position">
			<span asp-validation-for="Position" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="PhoneNumber"></label>
			<input class="form-control" asp-for="PhoneNumber">
			<span asp-validation-for="PhoneNumber" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Email"></label>
			<input class="form-control" asp-for="Email">
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="DepartmentId"></label>
			<select class="form-control" asp-for="DepartmentId" asp-items="departmentInput"></select>
			<span asp-validation-for="DepartmentId" class="text-danger"></span>
		</div>

		<h2 style="margin-top:50px">Summary Info:</h2>

		<div class="form-group">
			<label asp-for="CurrentStatus"></label>
			<select class="form-control" asp-for="CurrentStatus" asp-items="statusInput"></select>
			<span asp-validation-for="CurrentStatus" class="text-danger"></span>
		</div>

		<button style="margin-top: 25px" type="submit" class="btn btn-primary btn-lg">Submit</button>

	</div>
</form>

