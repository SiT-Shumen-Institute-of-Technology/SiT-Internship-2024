@model SACS.Web.ViewModels.ScheduleViewModel

<div class="container mt-4">
    <h2 class="mb-4">Добавяне на график</h2>

    <form method="post" asp-action="Schedule" asp-controller="Employee" class="bg-white p-4 rounded shadow-sm">
        <div class="mb-3">
            <label for="employeeId" class="form-label">Служител:</label>
            <select id="employeeId" name="EmployeeId" class="form-select" required>
                @foreach (var employee in Model.Employees)
                {
                    <option value="@employee.Value">@employee.Text</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="date" class="form-label">Дата:</label>
            <input type="date" id="date" name="Date" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="startTime" class="form-label">Начален час:</label>
            <input type="time" id="startTime" name="StartTime" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="endTime" class="form-label">Краен час:</label>
            <input type="time" id="endTime" name="EndTime" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Локация:</label>
            <select id="location" name="Location" class="form-select" required>
                <option value="Office">Office</option>
                <option value="Remote">Remote</option>
                <option value="Vacation">Vacation</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success">Добави</button>
    </form>

    <h2 class="mt-5 mb-3">График за текущата седмица</h2>

    <div class="table-responsive bg-white p-3 rounded shadow-sm">
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Служител</th>
                    <th>Дата</th>
                    <th>Начален час</th>
                    <th>Краен час</th>
                    <th>Статус</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entry in Model.WeeklySchedule)
                {
                    <tr>
                        <td>@entry.EmployeeName</td>
                        <td>@entry.Date.ToString("dd-MM-yyyy")</td>
                        <td>@entry.StartTime.ToString(@"hh\:mm")</td>
                        <td>@entry.EndTime.ToString(@"hh\:mm")</td>
                        <td class="text-white fw-bold
                            @(
                                entry.Location == "Office" ? "bg-success" :
                                entry.Location == "Remote" ? "bg-secondary" :
                                entry.Location == "Vacation" ? "bg-warning" : ""
                            )">
                            @entry.Location
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>